{% extends "_base.twig" %}
{% set title = Résultat ~ resultat.id_r %}

{% block content %}

<h1>Résultat {{ resultat.id_r }} <br /><small> - {{ resultat.performance }} ({{ resultat.nom_d }}) de {{ resultat.prenom_a }} {{ resultat.nom_a }}</small></h1>

<div class="ui centered grid padded basic segment"><div class="eight wide column"><a href="mailto:webmaster@casion.ch?subject=CA%20Stat%20-%20Erreur%20et%20correction&body=Monsieur%2C%20%0A%0AJ'ai%20constat%C3%A9%20une%20erreur%20sur%20le%20site%20des%20statistiques%20du%20CA%20Sion%20sur%20le%20r%C3%A9sultat%20suivant%20%3A%0A%0Aid%20%3A%20{{ resultat.id_r|url_encode }}%0A%0A%0AVeuillez%20apporter%20la%20correction%20suivante%20%3A%20CORRECTION%0A%0AJe%20vous%20adresse%20mes%20meilleures%20salutations%20!" class="ui primary button"><i class="bug icon"></i> Signaler une erreur</a></div></div>

<table id="results-table" class="ca-table resultats">
	<thead>
		<tr>
			<th>N°</th>
			<th>Discipline</th>
			<th>Performance</th>
			<th>Rang</th>
			<th>Date</th>
			<th>Compétition</th>
			<th>Lieu</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td class="ca-bug">{{resultat.id_r}}</td>
			<td>{{ resultat.nom_d }}</td>
			<td class="performance" id="performance">{{ resultat.performance }}</td>
			<td id="rang">{{ resultat.rang_r }}</td>
			<td id="date">{{ resultat.date_c|date('d.m.Y') }}</td>
			<td><a href="competitions/{{ res.id_c }}">{{ resultat.nom_c }}</a></td>
			<td>{{ resultat.lieu_c }}</td>
		</tr>
	</tbody>
</table>

<a href="{{baseUrl}}athletes/{{resultat.id_a}}">Tous les résultats de {{resultat.prenom_a}} {{resultat.nom_a}}</a><br />
<a href="{{baseUrl}}statistiques/{{resultat.id_d}}">Records du/de la {{resultat.nom_d}}</a><br />

{% endblock %}