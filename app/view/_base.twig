<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<title> {% if title %}{{title}} | CA Stats{% else %}CA Stats{% endif %}</title>
	<meta name="description" content="">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	
    <!-- css -->
    <link href="{{siteUrl}}assets/css/style.css" rel="stylesheet">
	
	<link href="{{siteUrl}}assets/css/semantic.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/semantic-ui/2.2.6/semantic.min.css">
	<link rel="stylesheet" href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css">
	<link rel="stylesheet" href="//cdn.jsdelivr.net/chartist.js/latest/chartist.min.css">
	
	<!-- Fonts -->
    <link href='//fonts.googleapis.com/css?family=Oswald:400,300,700' rel='stylesheet' type='text/css'>
	
    <!-- jQuery -->
    <script src="//code.jquery.com/jquery-2.1.1.min.js"></script>
	<script src="{{siteUrl}}assets/js/jquery-1.7.2.min.js"></script>
	
    <!-- JavaScript -->
    <script src="{{siteUrl}}assets/js/application.js"></script>
	<script type="text/javascript" src="https://www.amcharts.com/lib/3/amcharts.js"></script>
	<script type="text/javascript" src="https://www.amcharts.com/lib/3/serial.js"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/list.js/1.3.0/list.min.js"></script>
	<script src="http://code.highcharts.com/highcharts.js"></script>
	
	 <!-- DataTables -->
	<script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
	<script src="//cdn.datatables.net/plug-ins/1.10.12/sorting/date-de.js"></script>
	<script src="https://cdn.datatables.net/buttons/1.2.2/js/dataTables.buttons.min.js"></script>
	<script src="//cdn.datatables.net/buttons/1.2.2/js/buttons.flash.min.js"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
	<script src="//cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/vfs_fonts.js"></script>
	<script src="//cdn.datatables.net/buttons/1.2.2/js/buttons.html5.min.js"></script>
	<script src="//cdn.datatables.net/buttons/1.2.2/js/buttons.print.min.js"></script>
	<script src="//cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/pdfmake.min.js"></script>
	
</head>
<body>
	
	<!-- navigation mobile -->
	<div class="ui inverted labeled icon left inline vertical sidebar menu" id="sidebar">
        <a href="{{siteUrl}}" class="item"><i class="home icon"></i>{{ "Dashboard"|trans }}</a>
        <a href="{{siteUrl}}athletes" class="item"><i class="users icon"></i>{{ "Athletes"|trans }}</a>
        <a href="{{siteUrl}}statistiques" class="item"><i class="block layout icon"></i>{{ "Records"|trans }}</a>
        <a href="{{siteUrl}}reports" class="item"><i class="browser icon"></i>{{ "Reports"|trans }}</a>
        <a href="{{siteUrl}}about" class="item"><i class="help circle outline icon"></i>{{ "About"|trans }}</a>
	</div>

	<div class="pusher">
		<!-- navigation -->
		<div class="ui red menu">
			<div class="ui container">
				<!-- menu logo mobile -->
				<a class="logo-menu item"><i class="sidebar icon"></i>{{ "Menu"|trans }}</a>
				<!-- logo -->
				<a href="{{siteUrl}}" class="header item">{{config.app_name}}</a>
				<!-- items -->
				<a href="{{siteUrl}}" class="item">{{ "Dashboard"|trans }}</a>
				<a href="{{siteUrl}}athletes" class="item">{{ "Athletes"|trans }}</a>
				<a href="{{siteUrl}}statistiques" class="item">{{ "Records"|trans }}</a>
				<a href="{{siteUrl}}reports" class="item">{{ "Reports"|trans }}</a>
				<div class="right menu">
					<a href="{{config.app_url}}about" class="item">{{ "About"|trans }}</a>
					<div class="item">
						<a href="mailto:{{config.responsible_mail}}?subject=CA%20Stat%20-%20Erreur&amp;body=Monsieur%2C%0A%0AJ%27ai%20constat%C3%A9%20une%20erreur%20sur%20le%20site%20des%20statistiques%20du%20CA%20Sion.%20L%27erreur%20est%20la%20suivante%20%3A%0A%0A-Id%20%2F%20Athl%C3%A8te%20%2F%20discipline%20%2F%20date%20%2F%20performance%0A%0A%0AVeuillez%20apporter%20la%20correction%20suivante%20%3A%0A-Athl%C3%A8te%20%2F%20discipline%20%2F%20date%20%2F%20performance%0A%0AJe%20vous%20adresse%20mes%20meilleures%20salutations%20!" class="ui primary button"><i class="bug icon"></i> {{ "Report a bug"|trans }}</a>

					</div>
				</div>
			</div>
		</div>

		<!-- main content, will be injected via Twig -->
		<div class="ui container">{% block content %} {% endblock %}</div>
	
		<div class="ui inverted vertical footer segment ca-footer">
			  <div class="ui center aligned container">
				  {{config.launch_year}} - {{ 'now'|date('Y') }} &mdash; <cite>{{config.app_name}}</cite> {{ "data licensed under"|trans }} <a rel="license" href="http://creativecommons.org/licenses/{{config.data_licence}}/" target="_blank"><img alt="Licence Creative Commons {{config.data_licence}}" style="border-width:0;vertical-align:text-bottom;" src="https://i.creativecommons.org/l/{{config.data_licence}}/80x15.png" /></a> | <a href="{{config.organisation_url}}">{{config.organisation_name}}</a> | <a href="{{config.app_url}}about">{{ "About"|trans }}</a>
			  </div>
		  </div>
		  <div class="ui vertical footer segment">
			  <div class="ui center aligned container">Made with <a href="https://github.com/michaelravedoni/statathle" target="_blank"><i class="github icon"></i>StatAthl√©</a></div>
		  </div>

	  </div>

	  <script src="{{baseUrl}}assets/js/semantic.min.js"></script>
	  <script src="{{baseUrl}}assets/js/semantic.js"></script>
	
	  {% if config.google_analytics_id is defined and config.google_analytics_id %}
	  <!-- Google Analytics -->
	  <script>
	  window.ga=function(){ga.q.push(arguments)};ga.q=[];ga.l=+new Date;
	  ga('create','{{ config.google_analytics_id }}','auto');ga('send','pageview')
	  </script>
	  <script src="https://www.google-analytics.com/analytics.js" async defer></script>
	  <!-- End Google Analytics Code -->
	  {% endif %}

	  {% if config.piwik_site_id is defined and config.piwik_site_host is defined and config.piwik_site_id %}
	  <!-- Piwik -->
	  <script type="text/javascript">
	  var _paq = _paq || [];
	  _paq.push(['trackPageView']);
	  _paq.push(['enableLinkTracking']);
	  (function() {
		  var u="//{{config.piwik_url}}/";
		  _paq.push(['setTrackerUrl', u+'piwik.php']);
		  _paq.push(['setSiteId', '{{config.piwik_site_id}}']);
		  var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
		  g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'piwik.js'; s.parentNode.insertBefore(g,s);
          })();
		  </script>
		  <noscript><p><img src="//casion.ch/piwik/piwik.php?idsite={{config.piwik_site_id}}&rec=1" style="border:0;" alt="" /></p></noscript>
		  <!-- End Piwik Code -->
		  {% endif %}
	
</body>
</html>